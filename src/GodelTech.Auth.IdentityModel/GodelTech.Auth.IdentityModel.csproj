<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<PackageId>GodelTech.Auth.IdentityModel</PackageId>
		<VersionPrefix>1.0.0</VersionPrefix>
		<Authors>v.rodchenko</Authors>
		<Company>Godel Technologies</Company>
		<Description>Library to work with auth for different clients using IdentityModel</Description>
		<Copyright>Godel Technologies 2020</Copyright>
		<PackageLicenseUrl>https://github.com/GodelTech/GodelTech.Auth.IdentityModel/blob/main/LICENSE</PackageLicenseUrl>
		<PackageProjectUrl>https://github.com/GodelTech/GodelTech.Auth.IdentityModel/wiki</PackageProjectUrl>
		<PackageIconUrl>https://www.gravatar.com/avatar/839234621070de51e7b9cabd5ceee8fe?s=64</PackageIconUrl>
		<RepositoryUrl>https://github.com/GodelTech/GodelTech.Auth.IdentityModel</RepositoryUrl>
		<PackageTags>Auth IdentityModel</PackageTags>

		<AnalysisMode>AllEnabledByDefault</AnalysisMode>

		<!-- XML documentation -->
		<GenerateDocumentationFile>true</GenerateDocumentationFile>

		<!-- Source Link needs this -->
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<!-- SonarQube needs this -->
		<ProjectGuid>{00000000-0000-0000-0000-000000000001}</ProjectGuid>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="IdentityModel" Version="4.4.0" />
		<PackageReference Include="Microsoft.Extensions.Http" Version="3.1.8" />

		<!-- Source Link needs this -->
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
	</ItemGroup>

</Project>
